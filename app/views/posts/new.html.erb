<%= turbo_frame_tag "modal" do %>
<%= tag.div data: { controller: "turbo-modal" }, class: "mx-auto md:w-2/3 w-full" do %>
  <h1 class="font-bold text-4xl">New post</h1>

  <%= render "form", post: @post %>

  <%= button_tag "Close", data: { action: "turbo-modal#hideModal" }, type: "button", class: "rounded-lg py-3 px-5 bg-red-600 text-white" %>
<% end %>
<% end %>
