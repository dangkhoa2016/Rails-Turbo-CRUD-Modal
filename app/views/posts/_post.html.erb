<div id="<%= dom_id post %>" class='p-4 mb-5 bg-blue-50 rounded-lg shadow-sm border-dashed border border-blue-500 flex flex-col gap-2 sm:gap-0'>
  <% if @post.present? && @post.id == post.id %>
    <%= render "shared/notice", notice: notice, id: "notice_#{post.id}" %>
  <% end %>

  <p class="mb-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </p>

  <p class="mb-5">
    <strong class="block font-medium mb-1">Body:</strong>
    <%= post.body.gsub(/\r\n|\n/, "<br>").html_safe %>
  </p>

  <div class="">
    <% if action_name == "index" || (action_name == "update" && @from_index == 'true') %>
      <%= link_to "Show this post", post, class: "rounded-lg py-3 px-5 bg-gray-300 hover:bg-gray-500 inline-block font-medium" %>
    <% elsif action_name == "show" || (action_name == "update" && @from_index == 'false') %>
      <%= link_to 'Back to posts', posts_path, class: "mx-2 rounded-lg py-3 px-5 bg-purple-300 hover:bg-purple-500 inline-block font-medium" %>
    <% end %>

    <%= link_to 'Edit this post', edit_post_path(post, from_index: (action_name == "index")), data: { turbo_frame: 'modal' }, class: "rounded-lg py-3 mx-2 px-5 bg-green-300 hover:bg-green-500 inline-block font-medium" %>

    <%= button_to 'Destroy this post', post_path(post), method: :delete, form_class: 'inline-block', class: "rounded-lg py-3 px-5  bg-red-300 hover:bg-red-500 font-medium" %>
  </div>
</div>
